<%= form_with model: @picture_and_content, local: true, url: new_or_edit do |f| %>
<!--エラー表示部分-->
  <% if @picture_and_content.errors.any? %>
    <h2><%= @picture_and_content.errors.count %>件のエラーがあります。</h2>
    <ul>
      <% @picture_and_content.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
<!--フォーム本体-->
<div>
  <%= f.label :image %>
  <%= image_tag @picture_and_content.image.url if @picture_and_content.image.url %>
  <%= f.file_field :image %>
</div>
<div>
  <%= f.label :content %>
  <%= f.text_field :content %>
</div>
<%= f.hidden_field :image_cache %>
<div>
  <%= f.submit 'post' %>
</div>
<% end %>